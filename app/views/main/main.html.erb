<head>
    <style>
        #myVideo{
            position: fixed;
            z-index: -1;
            right: 0;
            bottom: 0;
        }
        @media (min-aspect-ratio: 16/9){
            #myVideo{
                width: 100%;
                height: auto;
            }
        }
        @media (max-aspect-ratio: 16/9){
            #myVideo{
                width: auto;
                height: 100%;   
            }
        }
        .button{
            text-decoration:none;
            text-transform:uppercase;
            padding: 10px 20px;
            border: 1px solid lightgreen;
            border-radius:10px;
            color:lightgreen;
            transition: 0.5s ease;
            font-family: 'Montserrat', sans-serif;
        }
        .button:hover{
            color:#fff;
            background-color:rgba(51, 255, 28, 0.3)
        }
    </style>
</head>
<body>

<% if user_signed_in? %>
<%= current_user.email %>
<% else %>
<div style="z-index:1223; position:absolute; width:100%; min-height:90vh;" class="d-flex justify-content-center align-items-center main_page">
<div style="width:30%;" class="d-flex justify-content-around align-items-center">
        <%= link_to "sign up", new_user_registration_path, class:"button" %>
        <%= link_to "login", new_user_session_path, class:"button" %>
</div>

<%= video_tag "videofonmain.mp4", autoplay: :autoplay, loop: :loop, id:"myVideo", class:"myVideo", style:"position: fixed; z-index: -1; right: 0; bottom: 0;" %>
 
    </div>
    </body>
    <% end %>